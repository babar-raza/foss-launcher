{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hugo_facts.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "languages",
    "default_language",
    "permalinks",
    "outputs",
    "taxonomies",
    "source_files"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "languages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "default_language": {
      "type": "string",
      "minLength": 1
    },
    "permalinks": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "taxonomies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "source_files": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
