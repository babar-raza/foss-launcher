{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hugo_facts.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "languages",
    "default_language",
    "default_language_in_subdir",
    "permalinks",
    "outputs",
    "taxonomies",
    "source_files"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "languages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "List of enabled language codes"
    },
    "default_language": {
      "type": "string",
      "minLength": 1,
      "description": "Default content language code (e.g., 'en')"
    },
    "default_language_in_subdir": {
      "type": "boolean",
      "description": "If true, default language content is also in a subdirectory URL"
    },
    "permalinks": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Custom permalink patterns by section"
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "description": "Output format configuration by page kind"
    },
    "taxonomies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Taxonomy definitions"
    },
    "source_files": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Config files used to derive these facts"
    }
  }
}
