{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ruleset.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "style", "truth", "editing", "sections"],
  "properties": {
    "schema_version": { "type": "string" },
    "style": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tone", "audience", "forbid_marketing_superlatives"],
      "properties": {
        "tone": { "type": "string" },
        "audience": { "type": "string" },
        "forbid_marketing_superlatives": { "type": "boolean" },
        "forbid_em_dash": { "type": "boolean" },
        "prefer_short_sentences": { "type": "boolean" },
        "forbid_weasel_words": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of marketing/weasel words that must not appear in content"
        }
      }
    },
    "truth": {
      "type": "object",
      "additionalProperties": false,
      "required": ["no_uncited_facts", "forbid_inferred_formats"],
      "properties": {
        "no_uncited_facts": { "type": "boolean" },
        "forbid_inferred_formats": { "type": "boolean" },
        "allow_external_citations": { "type": "boolean" },
        "allow_inference": { "type": "boolean" }
      }
    },
    "editing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["diff_only", "forbid_full_rewrite_existing_files"],
      "properties": {
        "diff_only": { "type": "boolean" },
        "forbid_full_rewrite_existing_files": { "type": "boolean" },
        "forbid_deleting_existing_files": { "type": "boolean" }
      }
    },
    "hugo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allow_shortcodes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of Hugo shortcodes that are permitted in content"
        },
        "forbid_raw_html_except_claim_markers": { "type": "boolean" }
      }
    },
    "claims": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "marker_style": {
          "type": "string",
          "enum": ["html_comment", "frontmatter"],
          "description": "How claim markers are embedded (html_comment or frontmatter)"
        },
        "html_comment_prefix": {
          "type": "string",
          "description": "Prefix for claim markers when using html_comment style (e.g., 'claim_id:')"
        },
        "remove_markers_on_publish": { "type": "boolean" }
      }
    },
    "sections": {
      "type": "object",
      "additionalProperties": false,
      "required": ["products", "docs", "reference", "kb", "blog"],
      "properties": {
        "products": { "$ref": "#/$defs/sectionMinPages" },
        "docs": { "$ref": "#/$defs/sectionMinPages" },
        "reference": { "$ref": "#/$defs/sectionMinPages" },
        "kb": { "$ref": "#/$defs/sectionMinPages" },
        "blog": { "$ref": "#/$defs/sectionMinPages" }
      }
    },
    "family_overrides": {
      "type": "object",
      "description": "TC-983: Per-family overrides for page requirements. Keys are family slugs (e.g., '3d', 'cells'). Values contain optional 'sections' property with relaxed schema (no required fields). Merge strategy: family mandatory_pages are UNIONED with global mandatory_pages.",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "sections": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "products": { "$ref": "#/$defs/sectionOverride" },
              "docs": { "$ref": "#/$defs/sectionOverride" },
              "reference": { "$ref": "#/$defs/sectionOverride" },
              "kb": { "$ref": "#/$defs/sectionOverride" },
              "blog": { "$ref": "#/$defs/sectionOverride" }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "sectionOverride": {
      "type": "object",
      "description": "TC-983: Family override section entry. Same properties as sectionMinPages but no required fields. Only specified fields are merged with global config.",
      "additionalProperties": false,
      "properties": {
        "min_pages": { "type": "integer", "minimum": 0 },
        "max_pages": { "type": "integer", "minimum": 0 },
        "style_by_section": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tone": { "type": "string" },
            "voice": { "type": "string" }
          }
        },
        "limits_by_section": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_words": { "type": "integer", "minimum": 0 },
            "max_headings": { "type": "integer", "minimum": 0 },
            "max_code_blocks": { "type": "integer", "minimum": 0 }
          }
        },
        "mandatory_pages": {
          "type": "array",
          "description": "TC-983: Additional mandatory pages for this family. UNIONED with global mandatory_pages (not replacing).",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["slug", "page_role"],
            "properties": {
              "slug": {
                "type": "string",
                "description": "Page slug (e.g., 'model-loading', 'rendering')"
              },
              "page_role": {
                "type": "string",
                "enum": [
                  "landing",
                  "toc",
                  "comprehensive_guide",
                  "workflow_page",
                  "feature_showcase",
                  "troubleshooting",
                  "api_reference"
                ],
                "description": "Strategic role of the page"
              }
            }
          }
        },
        "optional_page_policies": {
          "type": "array",
          "description": "TC-983: Additional optional page policies for this family.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["page_role", "source", "priority"],
            "properties": {
              "page_role": {
                "type": "string",
                "enum": [
                  "landing",
                  "toc",
                  "comprehensive_guide",
                  "workflow_page",
                  "feature_showcase",
                  "troubleshooting",
                  "api_reference"
                ],
                "description": "Page role for generated optional pages"
              },
              "source": {
                "type": "string",
                "description": "Evidence source for candidate generation"
              },
              "priority": {
                "type": "integer",
                "minimum": 1,
                "description": "Priority for ranking candidates (1 = highest)"
              }
            }
          }
        }
      }
    },
    "sectionMinPages": {
      "type": "object",
      "additionalProperties": false,
      "required": ["min_pages"],
      "properties": {
        "min_pages": { "type": "integer", "minimum": 0 },
        "max_pages": { "type": "integer", "minimum": 0 },
        "style_by_section": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tone": { "type": "string" },
            "voice": { "type": "string" }
          }
        },
        "limits_by_section": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_words": { "type": "integer", "minimum": 0 },
            "max_headings": { "type": "integer", "minimum": 0 },
            "max_code_blocks": { "type": "integer", "minimum": 0 }
          }
        },
        "mandatory_pages": {
          "type": "array",
          "description": "TC-983: List of mandatory pages that MUST be included in every page plan for this section. Each entry specifies a slug and its strategic page_role.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["slug", "page_role"],
            "properties": {
              "slug": {
                "type": "string",
                "description": "Page slug (e.g., '_index', 'getting-started', 'overview')"
              },
              "page_role": {
                "type": "string",
                "enum": [
                  "landing",
                  "toc",
                  "comprehensive_guide",
                  "workflow_page",
                  "feature_showcase",
                  "troubleshooting",
                  "api_reference"
                ],
                "description": "Strategic role of the page, must match page_plan.schema.json page_role enum"
              }
            }
          }
        },
        "optional_page_policies": {
          "type": "array",
          "description": "TC-983: Policies for generating optional pages from evidence. Each policy specifies a page_role, evidence source, and priority for candidate generation and ranking.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["page_role", "source", "priority"],
            "properties": {
              "page_role": {
                "type": "string",
                "enum": [
                  "landing",
                  "toc",
                  "comprehensive_guide",
                  "workflow_page",
                  "feature_showcase",
                  "troubleshooting",
                  "api_reference"
                ],
                "description": "Page role for generated optional pages"
              },
              "source": {
                "type": "string",
                "description": "Evidence source for candidate generation (e.g., 'per_feature', 'per_workflow', 'per_key_feature', 'per_api_symbol', 'per_deep_dive')"
              },
              "priority": {
                "type": "integer",
                "minimum": 1,
                "description": "Priority for ranking candidates (1 = highest). Lower priority candidates are selected first when quota allows."
              }
            }
          }
        }
      }
    }
  }
}
